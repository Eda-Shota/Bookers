<h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>title</th>
          <th>body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
       <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
          <%= link_to "Show", "/books/#{book.id}" %>
          <%= link_to "Edit", "/books/#{book.id}/edit" %>
          <%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
      </tbody>
       <% end %>
    </table>
  <h2><strong>New book</strong></h2>
  <% if @book.errors.any? %>
    <% if @book.errors.count == 1 %>
    <%= @book.errors.count %>error prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        <>
      </ul>
      <% else %>
          <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end  %>
  <% end %>
  <%= form_with model: @book, url: "books", method: :post do |book| %>
    <div class="field">
    <%= book.label :title, "Title" %>
    <%= book.text_field :title %>
    </div>
    <div class="field">
    <%= book.label :body, "Body" %>
    <%= book.text_area :body %>
    </div>
    <div class="action">
    <%= book.submit "Create Book" %>
    </div>
  <% end %>
